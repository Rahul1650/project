<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <input type="password" id="pass" >
    <button onclick="mp()" id="btn">Show password</button>
    <script>
        function mp() {
            var m=document.getElementById('pass')
            var ne=document.getElementById('btn')
            if (m.type ==='password') {
                m.type='text'
            ne.innerText='hide Pass'
            } else {
                m.type='password';
                ne.innerText='Show password'
            }
        }
    </script>
</body>
</html>
